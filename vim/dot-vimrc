set number

set backspace=indent,eol,start 
syntax on

set guifont=Menlo\ Regular:h18

set hidden
set history=100

filetype indent on
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent

set hlsearch
set showmatch

map <D-A-RIGHT> <C-w>l
map <D-A-LEFT> <C-w>h
map <D-A-DOWN> <C-w><C-w>
map <D-A-UP> <C-w>W

set showcmd
set cursorline
set lazyredraw

packadd! dracula
syntax enable
colorscheme dracula
